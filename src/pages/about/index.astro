---
import { getCollection } from "astro:content";
import PageLayout from "@layouts/PageLayout.astro";
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
---

<PageLayout title="Get help">
  <Container>
    <div class="space-y-10">
      <div class="font-semibold text-black dark:text-white">Help</div>
      <article>
        <p>
          You can talk about your issues in this public forum - there are only
          friendly faces here!
        </p><p>
          Alternatively, you can submit a <Link href="/get-help/private"
            >private request</Link
          >.
        </p>
      </article>
      <widgetbot
        server="1391618528901075075"
        channel="1424279531283419218"
        width="800"
        height="600"></widgetbot>
      <script src="https://cdn.jsdelivr.net/npm/@widgetbot/html-embed"></script>
    </div>
  </Container>
</PageLayout>
